# ============================================
# GCP Configuration
# ============================================
GCP_PROJECT_ID=fuel-track-360
GCP_REGION=us-east1

# ============================================
# Database (PostgreSQL via Cloud SQL)
# ============================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ft360
DATABASE_USER=ft360_app
DATABASE_PASSWORD=your_password_here
DATABASE_SSL=false

# ============================================
# Firebase
# ============================================
FIREBASE_PROJECT_ID=fuel-track-360
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=fuel-track-360.firebaseapp.com

# ============================================
# Cloud Storage
# ============================================
GCS_BUCKET_PHOTOS=ft360-photos
GCS_BUCKET_SIGNATURES=ft360-signatures
GCS_SIGNED_URL_EXPIRY=86400

# ============================================
# Sync Engine
# ============================================
SYNC_BATCH_SIZE=50
SYNC_MAX_RETRIES=5
SYNC_RETRY_BASE_DELAY_MS=1000

# ============================================
# Geofence
# ============================================
DEFAULT_GEOFENCE_RADIUS_M=500
GEOFENCE_STRICT_MODE=true

# ============================================
# Application
# ============================================
APP_PORT=8080
APP_ENV=development
LOG_LEVEL=debug
API_PREFIX=api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
